	<meta charset="utf-8" />

	{%- if page_description -%}
		<meta name="description" content="{{ page_description | escape }}">
	{%- endif -%}

	{%- include 'social-meta-tags' -%}

  {% assign canonical_url_link = canonical_url %}

  {% if page_title contains 'Mom Skin Care' %}
    {% assign canonical_url_link = shop.url | append: '/collections/mom' %}
  {% endif %}

  {% if page_title contains 'Baby Skin Care' %}
    {% assign canonical_url_link = shop.url | append: '/collections/baby' %}
  {% endif %}

	<link rel="canonical" href="{{ canonical_url_link }}">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<meta name="google-site-verification" content="X5el2bPptkwETmojFb2GFONRAPbRLsCG0wHpmVIPfrM" />
	<title>
	{{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
	</title>

  {% assign nofollowPages = "Cart, Account, Checkout, Style Guide" | split: ", " %}
	{% assign nofollow = 0 %}

  {% for pageTitle in nofollowPages %}
    {% if page_title contains pageTitle %}
      {% assign nofollow = 1 %}
    {% endif %}
  {% endfor %}

	{% if template contains 'product' %}
		{% if product.tags contains 'hidden' or product.type contains 'hidden' %} 
			{% assign nofollow = 1 %}
		{% endif %}
	{% endif %}

	{% if template contains 'thank-you' %}
		{% assign nofollow = 1 %}
	{% endif %}

	{% if template contains 'article' %}
		{% if article.handle contains 'adrizer' %}
			{% assign nofollow = 1 %}
		{% endif %}
	{% endif %}
	
	{% if nofollow == 1 %}
		<meta name="robots" content="noindex,nofollow">
	{% else %}
		<meta name="robots" content="index,follow">
	{% endif %}

	{% if settings.favicon %}
	  <link rel="shortcut icon" href="{{ settings.favicon | img_url: 'pico' }}" type="image/png" />
	  <link rel="apple-touch-icon-precomposed" href="{{ settings.favicon | img_url: '57x57' }}" />
