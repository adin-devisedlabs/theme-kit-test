<div class="form form--contact form--default">
	{% form 'contact' %}
		{%- assign attr_name = 'contact.form.name' | t | handle -%}
		{%- assign attr_phone = 'contact.form.phone' | t | handle -%}

		{%- if form.errors -%}
			<div class="form__message form__message--error">
				{{- form.errors | default_errors -}}
			</div><!-- /.form-notice -->
		{%- endif -%}

		{%- if form.posted_successfully? -%}
			<div class="form__message form__message--success">
				{{- 'contact.form.post_success' | t -}}
			</div><!-- /.form-alert -->
		{%- endif -%}

		<div class="form__body">
			<div class="form__row">
				<input type="text" id="field-contact-name" class="field" name="contact[{{ attr_name }}]" placeholder="{{ 'contact.form.name' | t }}" autocapitalize="words" value="{{ customer.name | default: form[attr_name] }}" aria-label="Enter name">
			</div><!-- /.form__row -->

			<div class="form__row">
				<input type="email" id="field-contact-email" class="field" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" autocorrect="off" autocapitalize="off" value="{{ customer.email | default: form.email }}" aria-label="Enter email" required>
			</div><!-- /.form__row -->

			<div class="form__row">
				<input type="tel" id="field-contact-phone" class="field" name="contact[{{ attr_phone }}]" placeholder="{{ 'contact.form.phone' | t }}" pattern="[0-9\-]*" value="{{ customer.phone | default: form[attr_phone] }}" aria-label="Enter phone number">
			</div><!-- /.form__row -->

			<div class="form__row">
				<textarea rows="10" id="field-contact-message" class="field" name="contact[body]" placeholder="{{ 'contact.form.message' | t }}" aria-label="Enter message" required>{{ form.body }}</textarea>
			</div><!-- /.form-row -->
		</div><!-- /.form__body -->

		<div class="form__actions clear">
			<button type="submit" class="btn btn--form">
				{{- 'contact.form.submit' | t -}}
			</button>
		</div><!-- /.form-actions -->
{% endform %}
</div><!-- /.form -->
