/* Shop Article Section */ 
.article .product__item .overlay_image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center center;
  -webkit-transition: opacity 0.3s, visibility 0.3s;
  -o-transition: opacity 0.3s, visibility 0.3s;
  transition: opacity 0.3s, visibility 0.3s;
  opacity: 0;
  z-index: 1; 
}

.article .product__item:hover .overlay_image,
.article .product__item:hover .overlay-product {
  opacity: 1;
  visibility: visible;
  -webkit-transform: rotateX(0);
          transform: rotateX(0); 
}

.article .product__item .overlay-product {
  position: absolute;
  bottom: 168px;
  left: 0;
  width: 100%;
  opacity: 0;
  -webkit-transition: opacity 0.3s;
  -o-transition: opacity 0.3s;
  transition: opacity 0.3s;
  -webkit-transform: rotateX(90deg);
          transform: rotateX(90deg);
  z-index: 5; }
.article .product__item .overlay-product form {
    position: relative;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
        -ms-flex-pack: center;
            justify-content: center; }
.article .product__item .overlay-product form input[name='quantity'] {
      -webkit-transition: background 0.3s;
      -o-transition: background 0.3s;
      transition: background 0.3s; }
.article .product__item .overlay-product form input[name='quantity']:focus {
      background-color: #fffefb; }
.article .product__item .overlay-product form:before {
      content: '';
      display: none;
      position: absolute;
      top: 16px;
      left: 50%;
      margin-left: -15px;
      width: 30px;
      height: 30px;
      border-radius: 100%;
      border: 2px solid #084b6d;
      border-top: 2px solid #fffefb;
      border-bottom: 2px solid #fffefb;
      -webkit-animation: spinner 0.6s linear infinite;
              animation: spinner 0.6s linear infinite;
      z-index: 2; }
.article .product__item .overlay-product form:after {
      display: none;
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%; }
.article .product__item .overlay-product form.loading:after, .article .product__item .overlay-product form.loading:before {
      display: block; }
.article .product__item .overlay-product form .btn {
      position: relative;
      -ms-flex-preferred-size: 150px;
          flex-basis: 150px;
      max-width: 150px;
      background: none;
      -webkit-transition: background 0.3s;
      -o-transition: background 0.3s;
      transition: background 0.3s; }
.article .product__item .overlay-product form .btn:hover {
        background-color: #fffefb; }
.article .product__item .overlay-product form .qty {
      max-width: 150px;
      -ms-flex-preferred-size: 150px;
          flex-basis: 150px;
      background: none; }
.article .product__item .overlay-product form .qty input {
        background: none; }

