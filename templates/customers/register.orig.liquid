<div class="flex-row">
	{%- include 'breadcrumbs' -%}
</div>
<div class="flex-row account-row">
	<div class="image-box" {%- include 'inline-style', bgimage: settings.account_image, wh: '1024x' -%}>
		
	</div><!-- /.image-box -->
	<div class="forms-box">
		{% comment %}
			Login
		{% endcomment %}
		<div class="form form--default form--register form--small" {% if form_submitted %} style="display: none"{% endif %}>
			{% form 'create_customer' %}
				{%- assign error_class = 'form__row--error' | prepend: ' ' -%}
				{%- capture error_first_name -%}{%- if form.errors contains 'first_name' -%}{{- error_class -}}{%- endif -%}{%- endcapture -%}
				{%- capture error_last_name -%}{%- if form.errors contains 'last_name' -%}{{- error_class -}}{%- endif -%}{%- endcapture -%}
				{%- capture error_email -%}{%- if form.errors contains 'email' -%}{{- error_class -}}{%- endif -%}{%- endcapture -%}
				{%- capture error_password -%}{%- if form.errors contains 'password' -%}{{- error_class -}}{%- endif -%}{%- endcapture -%}

				<div class="form__head">
					<h2>
						{{- 'customer.register.title' | t -}}
					</h2>
				</div><!-- /.form__head -->

				{% if form.errors %}
					<div class="form__errors">
						{{- form.errors | default_errors -}}
					</div><!-- /.form__errors -->
				{% endif %}

				<div class="form__body">
					<div class="form__row{{- error_first_name -}}">
						<div class="form__controls">
							<input type="text" class="field" name="customer[first_name]" id="field-first-name" value="{{- form.first_name -}}" placeholder="{{- 'customer.register.first_name' | t -}}">
						</div><!-- /.form__controls -->
					</div><!-- /.form__row -->

					<div class="form__row{{- error_last_name -}}">
						<div class="form__controls">
							<input type="text" class="field" name="customer[last_name]" id="field-last-name" value="{{- form.last_name -}}" placeholder="{{- 'customer.register.last_name' | t -}}">
						</div><!-- /.form__controls -->
					</div><!-- /.form__row -->

					<div class="form__row{{- error_email -}}">
						<div class="form__controls">
							<input type="email" class="field" name="customer[email]" id="field-email" value="{{- form.email -}}" placeholder="{{- 'customer.register.email' | t -}}" required>
						</div><!-- /.form__controls -->
					</div><!-- /.form__row -->

					<div class="form__row{{ error_password }} form__row--last">
						<div class="form__controls">
							<input type="password" class="field" name="customer[password]" id="field-password" value="" placeholder="{{- 'customer.register.password' | t -}}" required>
							<button type="submit" class="customer-btn">
								<span></span>
							</button>
						</div><!-- /.form__controls -->
					</div><!-- /.form__row -->
				</div><!-- /.form__body -->

				<div class="pass-errors">
					<h5>{{ 'customer.reset_password.password_contian' | t }}</h5>
					<ul class="errors"></ul><!-- /.errors -->
				</div><!-- /.pass-errors -->

				<label class="checkbox add-btn js-add">
					<input type="checkbox">
					<span></span>
					{{ 'customer.register.newsletter_text' | t }}
				</label><!-- /.checkbox -->

				<div class="form__actions form__cols">
					<div class="form__cta">
						<p>
							{{ 'customer.register.already_have_account' | t }}
							<a href="/account/login">{{ 'customer.register.login' | t }}</a>
						</p>
					</div><!-- /.form__cta -->
				</div><!-- /.form__actions -->
			{% endform %}

		</div><!-- /.form -->
	</div><!-- /.forms-box -->
</div><!-- /.flex-row -->
