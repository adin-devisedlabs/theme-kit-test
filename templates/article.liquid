      .image-float-right {
        width: 100%;
        padding-left: 0;
      }
    }
    .article__image {
      height: 50vh;
      max-height: 60vh;
      background-size: auto 180% !important;
    }

    .article--default .article__title {
      font-size: 36px;
    }

    .featured-product {
      /* display: none; */
    }

    .featured-products-hs {
      display: none;
    }

    .featured-product-hs {
      flex-basis: 33%;
      width: 33%;
      position: relative;
    }

    .featured-product-hs form {
      display: flex;
      justify-content: center;
    }

