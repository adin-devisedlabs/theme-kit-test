{% stylesheet %}
#shopify-section-page-gift-guide .collection__items {
	padding-bottom: 50px;
}

#shopify-section-page-gift-guide .collection__items:before {
	content: "";
	display: block;
	height: 100px;
	margin: -100px 0 0;
}

#shopify-section-page-gift-guide .collection__head {
	color: #fff;
	background-position: center;
}

#shopify-section-page-gift-guide .collection__head h6 {
	margin-bottom: 30px;
	font-size: 17.5px;
}

#shopify-section-page-gift-guide .price-banner {
	text-align: center;
	padding: 0;
	font-size: 25px;
	font-family: 'Recoleta', serif;
}

#shopify-section-page-gift-guide .price-banner img {
	width: 100%;
}

#shopify-section-page-gift-guide .category-nav {
	padding: 20px 30px;
}

#shopify-section-page-gift-guide .category-nav .category-nav__inner {
	display: flex;
	justify-content: space-between;
	max-width: 800px;
	margin: 0 auto;
}

#shopify-section-page-gift-guide .category-nav .category-nav__inner a {
	text-decoration: none;
	color: #245f40;
	font-size: 16px;
}

#shopify-section-page-gift-guide .category-nav .category-nav__inner a:hover {
	font-weight: 700;
}

@media screen and (max-width: 767px) {
	#shopify-section-page-gift-guide .category-nav__inner a {
		font-size: 14px;
		text-align: center;
	}

	#shopify-section-page-gift-guide .collection__items .product__item {
		-ms-flex-preferred-size: 50%;
		flex-basis: 50%;
		max-width: 50%;
		height: auto;
	}

	#shopify-section-page-gift-guide .collection__items .product__item .product__item-image {
		height: 260px;
	}

	#shopify-section-page-gift-guide .price-banner {
		margin-top: -145px;
		padding-top: 145px;
	}
}

{% endstylesheet %}

