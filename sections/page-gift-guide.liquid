{% assign priceLimit1 = section.settings.price_limit_1 | times: 100 %}
{% assign priceLimit2 = section.settings.price_limit_2 | times: 100 %}
{% assign priceLimit3 = section.settings.price_limit_3 | times: 100 %}

{% assign collectionSorted = collections[section.settings.collection].products | sort: 'price' %}

{%- if section.settings.banner -%}
	<div class="collection__head lazyload{% if section.settings.banner_mobile %} hidden-xs{% endif %}" data-bg="url({{ section.settings.banner | img_url: '2048x' }})">
    <h6>{{section.settings.banner_text_eyebrow}}</h6>
    {{section.settings.banner_text}}
	</div>
{%- endif -%}

{%- if section.settings.banner_mobile -%}
	<div class="collection__head lazyload visible-xs-block" style="padding:0;">
    <img src="{{ section.settings.banner_mobile | img_url: '600x' }}" style="margin: 0;" />
	</div>
{%- endif -%}

<div class="category-nav">
  <div class="category-nav__inner">
    <a href="#section_1">{{section.settings.section_1_title}}</a>
    <a href="#section_2">{{section.settings.section_2_title}}</a>
    <a href="#section_3">{{section.settings.section_3_title}}</a>
    <a href="#section_4">{{section.settings.section_4_title}}</a>
  </div>
</div>

<div class="price-banner" id="section_1">
  <img src="{{section.settings.section_banner_1 | img_url: 'master'}}" class="section-banner hidden-xs" />
  <img src="{{section.settings.section_banner_1_mobile | img_url: 'master'}}" class="section-banner visible-xs-block" />
</div>

<div class="collection__items">
  {% for _product in collections[section.settings.section_1_collection].products %}
    {%- include 'product-item' with _product -%}
  {% endfor %}
</div><!-- /.collection__items -->

