  <img src="{{section.settings.section_banner_3_mobile | img_url: 'master' }}" class="section-banner visible-xs-block" />
</div>

<div class="collection__items">
  {% for _product in collections[section.settings.section_3_collection].products %}
    {%- include 'product-item' with _product -%}
