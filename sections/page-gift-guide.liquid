  <img src="{{section.settings.section_banner_2_mobile | img_url: 'master'}}" class="section-banner visible-xs-block" />
</div>

<div class="collection__items">
  {% for _product in collections[section.settings.section_2_collection].products %}
    {%- include 'product-item' with _product -%}
  {% endfor %}
</div><!-- /.collection__items -->

<div class="price-banner" id="section_3">
